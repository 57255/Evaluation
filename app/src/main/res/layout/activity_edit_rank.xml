<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditRankActivity">
    <RelativeLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/choice_evaluation_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:id="@+id/choice_rank1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/choice"
            />

        <TextView
            android:fontFamily="@font/lxgwwenkai"
            android:id="@+id/evaluation_rank1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="请选择你的岗位层级"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <View
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/down_arrow"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>