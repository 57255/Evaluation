<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:fontFamily="@font/lxgwwenkai"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                      "
        />
    <RelativeLayout
        android:id="@+id/choice_exam_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/choice_exam"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/choice"
            android:clickable="true" />

        <TextView
            android:fontFamily="@font/lxgwwenkai"

            android:id="@+id/exam_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="请选择分数"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <View
            android:id="@+id/exam_down_arrow"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/down_arrow"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="                      "
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/black_line"
        />
</LinearLayout>