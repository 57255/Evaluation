<?xml version="1.0" encoding="utf-8"?>
<com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExamDownActivity"
    android:background="@color/blue_500">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="@dimen/text_size_30"
        >
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:background="@mipmap/exam1" />
    </LinearLayout>
    <RelativeLayout
        app:layout_isConsecutive="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/logindown"
            />
        <TextView
            android:id="@+id/exam_same_name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="电厂员工"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="60dp"
            android:id="@+id/exam_test_same"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />
    </RelativeLayout>

</com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout>