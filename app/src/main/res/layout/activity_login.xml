<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.LoginActivity"
    android:background="@color/blue_200">

    <View
        android:id="@+id/loginBack"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/logindown" />

    <View
        android:layout_width="324dp"
        android:layout_height="218dp"
        android:layout_above="@+id/loginBack"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/login" />

    <TextView
        android:fontFamily="@font/lxgwwenkai"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/loginBack"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="-4sp"
        android:text="登录"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:counterEnabled="true"
        android:layout_alignTop="@+id/loginBack"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="工号"
            android:fontFamily="@font/lxgwwenkai"

            android:inputType="number"
            android:id="@+id/CardNumber"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        android:layout_alignTop="@+id/textInputLayout"
        android:layout_marginTop="98.69dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="密码"
            android:fontFamily="@font/lxgwwenkai"
            android:inputType="textPassword"
            android:id="@+id/Password"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/inercut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textInputLayout1"
        android:layout_alignEnd="@+id/textInputLayout1"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/lxgwwenkai"
        android:lineSpacingExtra="3.2sp"
        android:text="忘记密码？"
        android:textColor="#0091EA"
        android:textFontWeight="400"
        android:textSize="15sp"
        android:translationY="-1.6sp" />

    <CheckBox
        android:fontFamily="@font/lxgwwenkai"
        android:id="@+id/rememberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textInputLayout1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:text="记住密码" />

    <Button
        android:fontFamily="@font/lxgwwenkai"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@id/textInputLayout1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>
