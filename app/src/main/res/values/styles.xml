<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyEditTextStyle">
        <!--文本的颜色，textColor和textSize不要放到style中-->
        <item name="android:textColorHint">@color/blue_200</item>
        <item name="colorControlNormal">@color/blue_200</item>
        <item name="colorControlActivated">@color/blue_200</item>
    </style>

    <style name="style_button">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#fbfbfd</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Theme.Evaluation.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />
</resources>